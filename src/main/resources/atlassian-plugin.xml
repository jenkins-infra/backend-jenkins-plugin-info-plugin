<atlassian-plugin key="org.jenkinsci.confluence.plugins.jenkins-plugin-info-plugin"
                  name="jenkins-plugin-info-plugin">
    <plugin-info>
        <description>Jenkins Plugin Info Macro Plugin</description>
        <version>1.8</version>
        <vendor name="Jenkins" url="http://jenkins.io/"/>
    </plugin-info>

    <macro name="jenkins-plugin-info"
           class="org.jenkinsci.confluence.plugins.JenkinsPluginInfoMacro"
           key="jenkins-plugin-info">
        <description>Inserts an infobox with information on a given Jenkins plugin.</description>
    </macro>

    <macro name="hudson-plugin-info"
           class="org.jenkinsci.confluence.plugins.JenkinsPluginInfoMacro"
           key="hudson-plugin-info">
        <description>Old macro name for compatibility.</description>
    </macro>

    <macro name="github-readme-content"
           class="org.jenkinsci.confluence.plugins.GithubMarkdownContentMacro"
           key="github-readme-content">
        <description>Renders content from a README.md file in the root of the given Github repository</description>
    </macro>
</atlassian-plugin>
